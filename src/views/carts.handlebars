<div>
<div class="">
    <div class="cartDiv">
        {{#if cartProducts}}
        <h1 id="Ltitle">Mi Carro de Compras </h1>
        <p  id="cart">{{cart}}</p> 
        <div id="Carrito">
            {{#each cartProducts}}
            <div class="productDiv">
                <p class="title"><b>{{this.title}}</b></p>
                <p>{{this.description}}</p>
                <img src={{this.thumbnail}} width="100em" height="100em" alt="imagen" />
                <p><b>Precio:</b> {{this.price}}</p>
                <p><b>Cantidad: </b> {{this.quantity}}</p>
                <input  class="button" type="button" onclick="QuantityChange({{this.id}},-1)" name="" value="-">
                <input  class="button" type="button" onclick="deleteCart({{this.id}})" name="" value="Quitar del Carrito">
                <input  class="button" type="button" onclick="QuantityChange({{this.id}},1)" name="" value="+">
            </div>
            {{/each }}
        </div>
        {{else }}
        <h1 id="Ltitle"></h1>
        <div id="Listado">
        </div>
        <div id="NoProdHero">
            <div class="noPdiv">
                <img src="https://img.freepik.com/free-vector/add-cart-concept-illustration_114360-1435.jpg?w=826&t=st=1678233850~exp=1678234450~hmac=e83dfbf30df5a067add1aca70bb273e7fabf6de157bde44f9f84358889d3f9f1" />
            </div>
            <h1 class="centered">Tu Carro se encuentra vacio actualmente. </h1>
            <h2> Que tal si cargamos algunos productos ? </h2>
            <a id="aport" class="centered" href="http://localhost:{{port}}/products"><input  class="pagebutton" type="button" onclick="" name="" value="Ver Todos los Productos"></a>
        </div>
        {{/if }}
    </div>
</div>
{{!-- <div style="margin-top: 10vh; height: 100%"></div> --}}
</div>
<script src="/socket.io/socket.io.js" ></script>
<script src="/js/products.js" ></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11" ></script>
