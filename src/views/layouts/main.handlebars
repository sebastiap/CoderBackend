<body>
    <div class="header">
        <div class="headerLogo">
            <a href="http://localhost:{{port}}/"><img height="75px" src="/img/SPIKAGAMES.PNG"></a>
        </div>
        <div class="headerButtonContainer">
            {{#if cart}}
                {{#if admin}}
                    <a href="http://localhost:{{port}}/admin/realtimeproducts"><input  class="pagebutton" type="button" onclick="" name="" value="ABM Productos"></a>
                {{else}}
                    <a href="http://localhost:{{port}}/carts/{{cart}}"><input class="pagebutton featuredbutton" type="button" onclick="" name="" value="Mi Carrito"></a>
                    <a href="http://localhost:{{port}}/products"><input  class="pagebutton" type="button" onclick="" name="" value="Productos"></a>
                    <a href="http://localhost:{{port}}/chat"><input  class="pagebutton" type="button" onclick="" name="" value="Chat"></a>
                {{/if}}
            <a href="http://localhost:{{port}}/auth/logout"><input  class="pagebutton logoutbutton" type="button" onclick="" name="" value="Desloguearse"></a>
            {{else}}
            {{#if user}}
                <a href="http://localhost:{{port}}/auth/logout"><input  class="pagebutton logoutbutton" type="button" onclick="" name="" value="Desloguearse"></a>
            {{else}}
            <a href="http://localhost:{{port}}/auth/login"><input  class="pagebutton" type="button" onclick="" name="" value="Login"></a>
            <a href="http://localhost:{{port}}/auth/register"><input  class="pagebutton" type="button" onclick="" name="" value="Register"></a>
            {{/if}}
        {{/if}}
        </div>
    </div>
