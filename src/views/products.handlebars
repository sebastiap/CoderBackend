<div>
<div class="container">
    <div class="listDiv">
        {{#if productos}}
        <h1 id="Ltitle">Lista de Productos Actuales </h1>
        <div id="Listado">
            
            {{#each productos}}
            <div class="productDiv">
                <p class="title"><b>{{this.title}}</b></p>
                <p>{{this.description}}</p>
                <img src={{this.thumbnail}} width="100em" height="100em" alt="imagen" />
                <p><b>Precio:</b> {{this.price}}</p>
                <p><b>Codigo de Producto:</b> {{this.code}}</p>
                {{#if this.status}}
                <p><b>Stock Disponible: </b> {{this.stock}}</p>
                <input  class="button" type="button" onclick="AddtoCart({{this.id}})" name="" value="AÃ±adir al Carro">
                {{else }}
                <input  class="button" type="button" onclick="" name="" value="Producto No disponible">
                {{/if  }}
            </div>
            {{/each }}
            {{#if prev}}
             <a href="http://localhost:8080/products/?query={{query}}&sort={{sort}}&page={{prev}}"><input  class="button" type="button" onclick="" name="" value="Anterior"></a>
            {{/if }}
            {{#if next}}
            <a href="http://localhost:8080/products/?query={{query}}&sort={{sort}}&page={{next}}"><input  class="button" type="button" onclick="" name="" value="Siguiente"></a>
            {{/if }}

        </div>
        {{else }}
        <h1 id="Ltitle"></h1>
        <div id="Listado">
        </div>
        <div id="NoProdHero">
        </div>
        {{/if }}
    </div>
    <div class="formDiv">
        <div>
            <a href="http://localhost:8080/products/"><input  class="button" type="button" onclick="" name="" value="Todos"></a>
            <a href="http://localhost:8080/products/?query=Games&sort={{sort}}&page=1"><input  class="button" type="button" onclick="" name="" value="Games"></a>
            <a href="http://localhost:8080/products/?query=Clothing&sort={{sort}}&page=1"><input  class="button" type="button" onclick="" name="" value="Clothing"></a>
            <a href="http://localhost:8080/products/?query=Misc&sort={{sort}}&page=1"><input  class="button" type="button" onclick="" name="" value="Misc"></a>
        </div>
        <div>
            {{!-- {{#if (eq sort 'Employer')}} --}}
            
            <a href="http://localhost:8080/products/?query={{query}}&sort=ASC&page={{page}}"><input  class="pagebutton" type="button" onclick="" name="" value="Orden Ascendente"></a>
            <a href="http://localhost:8080/products/?query={{query}}&sort=DESC&page={{page}}"><input  class="pagebutton" type="button" onclick="" name="" value="Orden Descendente"></a>
            {{!-- {{/if }} --}}
            {{!-- {{#if (sort eq "DESC") }}
            {{/if }} --}}
        </div>
    </div>
</div>
